		when "00111001" => e <= 10;
		when others => e <= 1;
		end case;
	end if;
  end process;
  
	process(clk)
	begin
	if(clk'event and clk='1')then
	  a <= a+1;
		if(a = d)then
			a <= 0;
			b <= b+1;
			c(b) <= '1';
			if(b = 7)then
		    b <= 0;
			end if;
		else
			c(b) <= '0';
