library ieee;
use ieee.std_logic_1164.all;
use ieee.std_logic_arith.all;
use ieee.std_logic_unsigned.all;

entity display is
	port(
		led_1: in std_logic;
		led_2: in std_logic_vector(1 downto 0);
		led: out std_logic;
		led_out: out std_logic);
end display;

architecture display_arch of display is
begin
	process(led_1,led_2)
	begin
		if(led_2="11")then
			led <= '1';
			led_out <= '1';
		elsif(led_2="00")then
			led <= '0';
			led_out <= '0';
		else
			if(led_1='1')then
				led <= '1';
				led_out <= '1';
			else
				led <= '0';
				led_out <= '0';
			end if;
		end if;
	end process;
end display_arch;
